@page "/login"
@inject IJSRuntime JSRuntime
@inject NavigationManager Navigation

<PageTitle>ورود - قدرا تیک</PageTitle>

<div class="container-fluid vh-100 d-flex align-items-center justify-content-center bg-light">
    <div class="row w-100">
        <div class="col-md-4 mx-auto">
            <div class="card shadow-lg border-0">
                <div class="card-header text-center bg-primary text-white py-4">
                    <h3 class="mb-1"><i class="bi bi-ticket-perforated me-2"></i>قدرا تیک</h3>
                    <small>سیستم مدیریت تیکت</small>
                </div>
                <div class="card-body p-4">

                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger" role="alert">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            @errorMessage
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(successMessage))
                    {
                        <div class="alert alert-success" role="alert">
                            <i class="bi bi-check-circle me-2"></i>
                            @successMessage
                        </div>
                    }

                    <!-- Loading Spinner -->
                    @if (isLoading)
                    {
                        <div class="text-center my-4">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">در حال ورود...</span>
                            </div>
                            <p class="mt-2 text-muted">در حال ورود به سیستم...</p>
                        </div>
                    }

                    <!-- فرم ورود -->
                    <form @onsubmit="HandleLogin" @onsubmit:preventDefault="true">
                        <div class="mb-3">
                            <label for="username" class="form-label">
                                <i class="bi bi-person me-1"></i>نام کاربری
                            </label>
                            <input type="text" class="form-control" id="username"
                                   @bind="Username" @bind:event="oninput"
                                   placeholder="نام کاربری خود را وارد کنید"
                                   disabled="@isLoading" required />
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label">
                                <i class="bi bi-lock me-1"></i>رمز عبور
                            </label>
                            <div class="position-relative">
                                <input type="@(showPassword ? "text" : "password")"
                                       class="form-control" id="password"
                                       @bind="Password" @bind:event="oninput"
                                       placeholder="رمز عبور خود را وارد کنید"
                                       disabled="@isLoading" required />
                                <button type="button" class="btn btn-outline-secondary position-absolute top-0 end-0 h-100 px-3"
                                        @onclick="TogglePasswordVisibility" disabled="@isLoading">
                                    <i class="bi @(showPassword ? "bi-eye-slash" : "bi-eye")"></i>
                                </button>
                            </div>
                        </div>

                        <div class="mb-3 form-check">
                            <input type="checkbox" class="form-check-input" id="rememberMe"
                                   @bind="RememberMe" disabled="@isLoading" />
                            <label class="form-check-label" for="rememberMe">
                                مرا به خاطر بسپار
                            </label>
                        </div>

                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-primary btn-lg" disabled="@isLoading">
                                @if (isLoading)
                                {
                                    <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                }
                                <i class="bi bi-box-arrow-in-right me-2"></i>ورود
                            </button>
                        </div>
                    </form>

                    <hr>

                    <!-- دکمه‌های تست سریع -->
                    <div class="text-center">
                        <h6 class="text-muted mb-3">تست سریع:</h6>
                        <div class="row g-1">
                            <div class="col-4">
                                <button type="button" class="btn btn-outline-primary btn-sm w-100"
                                        @onclick='() => QuickLogin("admin1", "admin123")'
                                        disabled="@isLoading">
                                    <i class="bi bi-shield me-1"></i>مدیر
                                </button>
                            </div>
                            <div class="col-4">
                                <button type="button" class="btn btn-outline-info btn-sm w-100"
                                        @onclick='() => QuickLogin("support1", "support123")'
                                        disabled="@isLoading">
                                    <i class="bi bi-headset me-1"></i>پشتیبان
                                </button>
                            </div>
                            <div class="col-4">
                                <button type="button" class="btn btn-outline-success btn-sm w-100"
                                        @onclick='() => QuickLogin("user1", "user123")'
                                        disabled="@isLoading">
                                    <i class="bi bi-person me-1"></i>کاربر
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private string Username { get; set; } = string.Empty;
    private string Password { get; set; } = string.Empty;
    private bool RememberMe { get; set; } = false;
    private bool showPassword = false;
    private bool isLoading = false;

    private string errorMessage = string.Empty;
    private string successMessage = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        // بررسی اینکه کاربر قبلاً لاگین کرده
        try
        {
            var isAuth = await JSRuntime.InvokeAsync<bool>("isAuthenticated");
            if (isAuth)
            {
                Navigation.NavigateTo("/");
                return;
            }
        }
        catch (Exception ex)
        {
            // اگر JS هنوز لود نشده، صبر می‌کنیم
            Console.WriteLine($"JS not ready yet: {ex.Message}");
        }
    }

    private async Task HandleLogin()
    {
        if (isLoading) return;

        errorMessage = string.Empty;
        successMessage = string.Empty;

        if (string.IsNullOrWhiteSpace(Username) || string.IsNullOrWhiteSpace(Password))
        {
            errorMessage = "نام کاربری و رمز عبور الزامی است.";
            return;
        }

        isLoading = true;
        StateHasChanged();

        try
        {
            // استفاده از JavaScript برای لاگین
            var loginResult = await JSRuntime.InvokeAsync<dynamic>("login", Username, Password, RememberMe);

            if (loginResult?.success == true)
            {
                successMessage = "ورود موفقیت‌آمیز! در حال انتقال...";
                StateHasChanged();

                // کمی صبر برای نمایش پیام موفقیت
                await Task.Delay(1500);

                // انتقال به صفحه اصلی
                Navigation.NavigateTo("/", forceLoad: true);
            }
            else
            {
                errorMessage = loginResult?.error?.ToString() ?? "خطا در ورود به سیستم";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"خطا در ورود: {ex.Message}";
            Console.WriteLine($"Login error: {ex}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task QuickLogin(string username, string password)
    {
        Username = username;
        Password = password;
        RememberMe = false;
        await HandleLogin();
    }

    private void TogglePasswordVisibility()
    {
        showPassword = !showPassword;
    }
}