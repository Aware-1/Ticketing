@page "/login"
@using Microsoft.AspNetCore.Authentication
@using Microsoft.AspNetCore.Authentication.Cookies
@using System.Security.Claims
@using System.ComponentModel.DataAnnotations
@inject IUserService UserService
@inject NavigationManager Navigation
@inject IHttpContextAccessor HttpContextAccessor

<PageTitle>ورود - قدرا تیک</PageTitle>

<div class="container-fluid vh-100 d-flex align-items-center justify-content-center bg-light">
    <div class="row w-100">
        <div class="col-md-4 mx-auto">
            <div class="card shadow-lg border-0">
                <div class="card-header text-center bg-primary text-white py-4">
                    <h3 class="mb-1"><i class="bi bi-ticket-perforated me-2"></i>قدرا تیک</h3>
                    <small>سیستم مدیریت تیکت</small>
                </div>
                <div class="card-body p-4">

                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            @errorMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(successMessage))
                    {
                        <div class="alert alert-success" role="alert">
                            <i class="bi bi-check-circle me-2"></i>
                            @successMessage
                        </div>
                    }

                    <form method="post" @onsubmit="HandleLogin" @onsubmit:preventDefault="true">
                        <div class="mb-3">
                            <label class="form-label fw-bold">
                                <i class="bi bi-person me-1"></i>نام کاربری
                            </label>
                            <input type="text" class="form-control form-control-lg"
                                   placeholder="admin1" @bind="Username" required
                                   autocomplete="username" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">
                                <i class="bi bi-lock me-1"></i>رمز عبور
                            </label>
                            <input type="password" class="form-control form-control-lg"
                                   placeholder="admin123" @bind="Password" required
                                   autocomplete="current-password" />
                        </div>

                        <div class="mb-4 form-check">
                            <input type="checkbox" class="form-check-input"
                                   @bind="RememberMe" id="rememberMe" />
                            <label class="form-check-label" for="rememberMe">
                                مرا به خاطر بسپار (7 روز)
                            </label>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg" disabled="@isLoading">
                                @if (isLoading)
                                {
                                    <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                    <span>در حال ورود...</span>
                                }
                                else
                                {
                                    <i class="bi bi-box-arrow-in-right me-2"></i>
                                    <span>ورود به سیستم</span>
                                }
                            </button>
                        </div>
                    </form>

                    <hr class="my-4">

                    <div class="text-center">
                        <h6 class="text-muted mb-3">
                            <i class="bi bi-info-circle me-1"></i>
                            حساب‌های تستی:
                        </h6>

                        <div class="row g-2">
                            <div class="col-12">
                                <div class="border rounded p-2 bg-light">
                                    <div class="row">
                                        <div class="col-4">
                                            <small class="text-primary fw-bold d-block">مدیر:</small>
                                            <small class="font-monospace">admin1</small>
                                            <br>
                                            <small class="font-monospace">admin123</small>
                                        </div>
                                        <div class="col-4">
                                            <small class="text-info fw-bold d-block">پشتیبان:</small>
                                            <small class="font-monospace">support1</small>
                                            <br>
                                            <small class="font-monospace">support123</small>
                                        </div>
                                        <div class="col-4">
                                            <small class="text-success fw-bold d-block">کاربر:</small>
                                            <small class="font-monospace">user1</small>
                                            <br>
                                            <small class="font-monospace">user123</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer text-center text-muted py-3">
                    <small>
                        <i class="bi bi-shield-check me-1"></i>
                        ورود امن با رمزنگاری کوکی
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    // ❌ بدون @rendermode - این صفحه SSR هست

    private string Username = string.Empty;
    private string Password = string.Empty;
    private bool RememberMe = false;
    private bool isLoading = false;
    private string errorMessage = string.Empty;
    private string successMessage = string.Empty;

    private async Task HandleLogin()
    {
        isLoading = true;
        errorMessage = string.Empty;
        successMessage = string.Empty;

        try
        {
            // Validate input
            if (string.IsNullOrWhiteSpace(Username) || string.IsNullOrWhiteSpace(Password))
            {
                errorMessage = "نام کاربری و رمز عبور الزامی است.";
                return;
            }

            // Authenticate user
            var user = await UserService.LoginAsync(Username, Password);

            if (user != null)
            {
                // Get actual HttpContext from IHttpContextAccessor
                var httpContext = HttpContextAccessor.HttpContext;

                if (httpContext != null)
                {
                    // Create claims
                    var claims = new List<Claim>
                    {
                        new Claim(ClaimTypes.NameIdentifier, user.Id.ToString()),
                        new Claim(ClaimTypes.Name, user.Username),
                        new Claim(ClaimTypes.Email, user.Email),
                        new Claim("DisplayName", user.DisplayName),
                        new Claim(ClaimTypes.Role, user.Role.Name),
                        new Claim("UserId", user.Id.ToString())
                    };

                    var claimsIdentity = new ClaimsIdentity(claims, CookieAuthenticationDefaults.AuthenticationScheme);
                    var claimsPrincipal = new ClaimsPrincipal(claimsIdentity);

                    var authProperties = new AuthenticationProperties
                    {
                        IsPersistent = RememberMe,
                        ExpiresUtc = RememberMe ? DateTimeOffset.UtcNow.AddDays(7) : DateTimeOffset.UtcNow.AddHours(1),
                        IssuedUtc = DateTimeOffset.UtcNow
                    };

                    // ✅ Sign in using REAL HttpContext - This works in SSR!
                    await httpContext.SignInAsync(
                        CookieAuthenticationDefaults.AuthenticationScheme,
                        claimsPrincipal,
                        authProperties);

                    successMessage = "ورود موفقیت‌آمیز! در حال انتقال به داشبورد...";

                    // Small delay to show success message
                    await Task.Delay(1500);

                    // Navigate to home page
                    Navigation.NavigateTo("/", true);
                }
                else
                {
                    errorMessage = "خطا در دسترسی به HttpContext. لطفاً دوباره تلاش کنید.";
                }
            }
            else
            {
                errorMessage = "نام کاربری یا رمز عبور اشتباه است. لطفاً دوباره تلاش کنید.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"خطا در ورود: {ex.Message}";
            Console.WriteLine($"Login error: {ex}");
        }
        finally
        {
            isLoading = false;
        }
    }
}