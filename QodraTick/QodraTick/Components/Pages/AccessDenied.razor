@page "/access-denied"

<PageTitle>دسترسی محدود - قدرا تیک</PageTitle>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-warning">
                <div class="card-header bg-warning text-dark text-center">
                    <h3><i class="bi bi-shield-exclamation me-2"></i>دسترسی محدود</h3>
                </div>
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="bi bi-lock-fill text-warning" style="font-size: 4rem;"></i>
                    </div>

                    <h4 class="card-title">شما مجوز دسترسی به این بخش را ندارید</h4>

                    <p class="card-text text-muted">
                        متأسفانه سطح دسترسی شما برای مشاهده این صفحه کافی نیست.
                        لطفاً با مدیر سیستم تماس بگیرید یا به صفحه مناسب نقش کاربری خود مراجعه کنید.
                    </p>

                    <div class="d-grid gap-2 d-md-block">
                        <a href="/" class="btn btn-primary">
                            <i class="bi bi-house-door me-2"></i>
                            بازگشت به صفحه اصلی
                        </a>

                        <a href="/logout" class="btn btn-outline-secondary">
                            <i class="bi bi-box-arrow-right me-2"></i>
                            خروج و ورود مجدد
                        </a>
                    </div>

                    <hr class="my-4">

                    <AuthorizeView>
                        <Authorized>
                            <div class="alert alert-info">
                                <small>
                                    <strong>اطلاعات کاربری:</strong><br>
                                    نام: @context.User.FindFirst("DisplayName")?.Value<br>
                                    نقش: @GetRoleDisplayName(context.User.FindFirst(ClaimTypes.Role)?.Value)
                                </small>
                            </div>
                        </Authorized>
                        <NotAuthorized>
                            <div class="alert alert-warning">
                                <small>شما وارد سیستم نشده‌اید. لطفاً ابتدا وارد شوید.</small>
                            </div>
                        </NotAuthorized>
                    </AuthorizeView>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private string GetRoleDisplayName(string? role) => role switch
    {
        "User" => "کاربر عادی",
        "Support" => "پشتیبان",
        "Admin" => "مدیر سیستم",
        _ => "نامشخص"
    };
}