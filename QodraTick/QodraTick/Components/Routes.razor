@using Microsoft.AspNetCore.Components.Authorization

<CascadingAuthenticationState>
    <Router AppAssembly="typeof(Program).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="routeData" DefaultLayout="typeof(Layout.MainLayout)">
                <NotAuthorized>
                    <div class="container mt-4">
                        <div class="alert alert-warning text-center">
                            <h3>دسترسی محدود</h3>
                            <p>برای استفاده از این بخش باید وارد شوید.</p>
                            <a href="/login" class="btn btn-primary">ورود به سیستم</a>
                        </div>
                    </div>
                </NotAuthorized>
            </AuthorizeRouteView>
            <FocusOnNavigate RouteData="routeData" Selector="h1" />
        </Found>
        <NotFound>
            <PageTitle>صفحه یافت نشد</PageTitle>
            <LayoutView Layout="typeof(Layout.MainLayout)">
                <div class="container mt-4">
                    <div class="alert alert-danger text-center">
                        <h3>صفحه یافت نشد</h3>
                        <p>متأسفانه صفحه مورد نظر یافت نشد.</p>
                        <a href="/" class="btn btn-primary">بازگشت به صفحه اصلی</a>
                    </div>
                </div>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>